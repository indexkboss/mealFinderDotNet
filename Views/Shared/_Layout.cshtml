<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="mealFinderDotNet - Découvrez des milliers de recettes délicieuses" />
    <meta name="keywords" content="recettes, cuisine, food, repas, chef, recette" />
    <title>@ViewData["Title"] - mealFinderDotNet</title>

    <!-- Fonts & Icons -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mealFinderDotNet.styles.css" asp-append-version="true" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
</head>

<body class="app-wrapper">
    <!-- ===== HEADER / NAVBAR ===== -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-utensils"></i>
                    mealFinderDotNet
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i>
                                Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Recipes" asp-action="Index">
                                <i class="fas fa-book"></i>
                                Recettes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Categories" asp-action="Index">
                                <i class="fas fa-tags"></i>
                                Catégories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">
                                <i class="fas fa-info-circle"></i>
                                À propos

                            </a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center gap-3 div-Logout">
                        <a class="nav-link" asp-controller="Home" asp-action="LogOut">
                            Logout
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- ===== MAIN CONTENT ===== -->
    <main class="main-content" role="main">
        @RenderBody()
    </main>

    <!-- ===== FOOTER ===== -->
    <footer class="site-footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <div class="footer-logo">
                        <i class="fas fa-utensils"></i>
                        mealFinderDotNet
                    </div>
                    <p class="footer-description">
                        Découvrez des milliers de recettes délicieuses créées par des chefs passionnés.
                        Rejoignez notre communauté de foodies !
                    </p>
                    <div class="footer-social">
                        <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                        <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                        <a href="#" aria-label="Pinterest"><i class="fab fa-pinterest"></i></a>
                        <a href="#" aria-label="YouTube"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>

                <div class="footer-section">
                    <h3>Liens rapides</h3>
                    <ul class="footer-links">
                        <li><a href="#"><i class="fas fa-chevron-right"></i> Toutes les recettes</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right"></i> Recettes populaires</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right"></i> Recettes rapides</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right"></i> Recettes végétariennes</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right"></i> Recettes healthy</a></li>
                    </ul>
                </div>

                <div class="footer-section">
                    <h3>Contactez-nous</h3>
                    <div class="footer-contact">
                        <p><i class="fas fa-envelope"></i> contact@mealfindernet.com</p>
                        <p><i class="fas fa-phone"></i> +33 1 23 45 67 89</p>
                        <p><i class="fas fa-map-marker-alt"></i> 123 Rue de la Cuisine, Paris 75000</p>
                    </div>
                </div>
            </div>

            <div class="footer-bottom">
                <p>
                    &copy; 2025 - mealFinderDotNet. Tous droits réservés. |
                    <a asp-controller="Home" asp-action="Privacy">Politique de confidentialité</a> |
                    <a asp-controller="Home" asp-action="Terms">Conditions d'utilisation</a>
                </p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>