@model List<mealFinderDotNet.Models.RecetteViewModel>

@{
    ViewData["Title"] = "Toutes les recettes";
}

<h1 class="mb-4">Toutes les recettes</h1>

<div class="row">
    @foreach (var recette in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <img src="@recette.Image" class="card-img-top" alt="@recette.Title" style="object-fit: cover; height: 200px;">

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@recette.Title</h5>
                    <p class="card-text mb-2">
                        <strong>Temps :</strong> @recette.ReadyInMinutes min<br />
                        <strong>Portions :</strong> @recette.Servings
                    </p>
                    <a asp-controller="Recipe" asp-action="Details" asp-route-id="@recette.Id"
                       class="btn btn-primary mt-auto">
                        Voir les détails
                    </a>
                </div>
            </div>
        </div>
    }
</div>
<div class="d-flex justify-content-center mt-4">
    @if (ViewBag.CurrentPage > 1)
    {
        <a asp-action="Index"
           asp-route-page="@(ViewBag.CurrentPage - 1)"
           class="btn btn-outline-secondary me-2">
            ← Précédent
        </a>
    }

    <a asp-action="Index"
       asp-route-page="@(ViewBag.CurrentPage + 1)"
       class="btn btn-primary">
        Suivant →
    </a>
</div>

<style>
    /* Effet hover sur les cartes */
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
    }

    .card-title {
        font-weight: 600;
        font-size: 1.1rem;
    }

    .card-text {
        font-size: 0.95rem;
        color: #555;
    }

    .btn-primary {
        background-color: #ff6b6b;
        border-color: #ff6b6b;
        transition: all 0.2s ease-in-out;
    }

        .btn-primary:hover {
            background-color: #ee5a52;
            border-color: #ee5a52;
        }
</style>
